<resources xmlns:tools="http://schemas.android.com/tools">
            <!-- Base application theme. -->
            <style name="Theme.WellnessApp" parent="Theme.Material3.DayNight">
                <!-- Primary brand color. -->
                <item name="colorPrimary">@color/primary_soft_mint</item>
                <item name="colorPrimaryVariant">@color/primary_soft_mint_dark</item>
                <item name="colorOnPrimary">@color/text_white</item>
                <!-- Secondary brand color. -->
                <item name="colorSecondary">@color/secondary_airy_blue</item>
                <item name="colorSecondaryVariant">@color/secondary_airy_blue_dark</item>
                <item name="colorOnSecondary">@color/text_white</item>
                <!-- Status bar color. -->
                <item name="android:statusBarColor" tools:targetApi="l">@color/background_light</item>
                <!-- Customize your theme here. -->
                <item name="android:windowBackground">@color/background_light</item>
            </style>

    <!-- Card Style -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Enhanced Typography Styles -->
    <style name="GreetingText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:shadowColor">@color/shadow_light</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ProgressText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/progress_green</item>
    </style>

    <style name="MoodEmojiText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/circle_background_white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:stateListAnimator">@animator/mood_emoji_animator</item>
    </style>

            <!-- Button Styles -->
            <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
                <item name="backgroundTint">@color/accent_orange</item>
                <item name="android:textColor">@color/text_white</item>
                <item name="cornerRadius">12dp</item>
                <item name="android:textSize">16sp</item>
                <item name="android:textStyle">bold</item>
            </style>

            <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
                <item name="strokeColor">@color/primary_indigo</item>
                <item name="android:textColor">@color/primary_indigo</item>
                <item name="cornerRadius">12dp</item>
                <item name="android:textSize">16sp</item>
            </style>

            <!-- Toggle Button Styles -->
            <style name="ToggleButtonIndigo" parent="Widget.MaterialComponents.Button.OutlinedButton">
                <item name="strokeColor">@color/primary_indigo</item>
                <item name="android:textColor">@color/primary_indigo</item>
                <item name="cornerRadius">12dp</item>
                <item name="android:textSize">14sp</item>
                <item name="android:minHeight">48dp</item>
                <item name="android:paddingStart">16dp</item>
                <item name="android:paddingEnd">16dp</item>
            </style>

            <style name="ToggleButtonOrange" parent="Widget.MaterialComponents.Button.OutlinedButton">
                <item name="strokeColor">@color/accent_orange</item>
                <item name="android:textColor">@color/accent_orange</item>
                <item name="cornerRadius">12dp</item>
                <item name="android:textSize">14sp</item>
                <item name="android:minHeight">48dp</item>
                <item name="android:paddingStart">16dp</item>
                <item name="android:paddingEnd">16dp</item>
            </style>

    <!-- Text Styles -->
    <style name="HeadingText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SubheadingText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodyText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

            <!-- Progress Bar Style -->
            <style name="CircularProgressStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
                <item name="indicatorColor">@color/primary_light_purple</item>
                <item name="trackColor">@color/secondary_soft_mint</item>
            </style>

            <!-- Floating Action Button Style -->
            <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
                <item name="backgroundTint">@color/accent_pale_blue</item>
                <item name="tint">@color/text_white</item>
                <item name="elevation">6dp</item>
            </style>

            <!-- App Bar Style -->
            <style name="AppBarStyle" parent="Widget.MaterialComponents.Toolbar">
                <item name="android:background">@color/background_white</item>
                <item name="titleTextColor">@color/text_primary</item>
                <item name="android:elevation">4dp</item>
            </style>

            <!-- Bottom Navigation Style -->
            <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
                <item name="itemIconTint">@color/primary_light_purple</item>
                <item name="itemTextColor">@color/primary_light_purple</item>
                <item name="android:background">@color/background_white</item>
                <item name="elevation">8dp</item>
            </style>

</resources>
