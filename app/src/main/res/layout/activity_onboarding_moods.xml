<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <!-- Background Decorative Elements -->

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Illustration -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="407dp"
            android:layout_marginBottom="40dp"
            android:background="@color/background_white"
            android:contentDescription="Mood illustration"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/moods" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Your Mood"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log your daily emotions and understand your patterns"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_indigo"
            app:cornerRadius="28dp" />

    </LinearLayout>

</RelativeLayout>
