<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Habit Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary_indigo"
        app:hintTextColor="@color/primary_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_habit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Habit Name"
            android:inputType="textCapWords"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Habit Description -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary_indigo"
        app:hintTextColor="@color/primary_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_habit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description (optional)"
            android:inputType="textCapSentences"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Habit Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Type"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_habit_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/widget_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Duration -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary_light_purple"
        app:hintTextColor="@color/primary_light_purple"
        app:suffixText="minutes">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_habit_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration"
            android:inputType="number"
            android:maxLines="1"
            android:text="30" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Tip: Choose a realistic duration that you can commit to daily"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:background="@drawable/widget_background"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="end">

        <!-- Delete Button (only show when editing) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="DELETE"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_red"
            android:visibility="gone" />

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="CANCEL"
            android:textColor="@color/primary_indigo"
            android:backgroundTint="@color/white"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_indigo" />

    </LinearLayout>

</LinearLayout>
