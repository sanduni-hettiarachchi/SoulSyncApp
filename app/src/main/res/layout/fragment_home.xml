<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Greeting + Profile Icon -->

        <!-- Progress Card -->

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="246dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/b1"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="129dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="228dp"
                        android:layout_height="76dp"
                        android:text="Love and Accept Yourself"
                        android:textColor="@color/text_white"
                        android:textSize="27sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Today's Progress Card -->
            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/progress_card_background_orange"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today's Progress"
                        android:textColor="@color/background_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_circular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:progress="0"
                        app:indicatorColor="@color/accent_orange_light"
                        app:trackColor="@color/progress_track" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habits Done:"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_habits_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="0%"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Steps Today Card -->
            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/steps_card_background_orange"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps Today"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_steps_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="5,489 / 10,000"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Mood Tracker -->
        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="152dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/widget_background"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="How are you feeling?"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Mood Emojis - Single Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_mood_happy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_background_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="ðŸ˜„"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/btn_mood_sad"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_background_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="ðŸ˜¢"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/btn_mood_angry"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_background_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="ðŸ˜ "
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/btn_mood_tired"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_background_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="ðŸ˜´"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/btn_mood_worried"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_background_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="ðŸ˜Ÿ"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/btn_mood_neutral"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_background_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="ðŸ˜"
                    android:textSize="32sp" />

            </LinearLayout>

            <!-- Shake to Log Instruction -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_shake"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shake to log mood quickly"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- See More Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_see_more_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="See More"
                    android:textColor="@color/primary_indigo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/primary_indigo"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Habits and Hydration Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Habits Card -->
            <LinearLayout
                android:id="@+id/card_habits"
                android:layout_width="0dp"
                android:layout_height="235dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/widget_background"
                android:clickable="true"
                android:elevation="6dp"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Top Section - Quote and Illustration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/text_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Build better habits quote - Editable -->
                    <EditText
                        android:id="@+id/et_habits_quote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="Build better habits"
                        android:inputType="text"
                        android:maxLines="2"
                        android:paddingHorizontal="8dp"
                        android:text="Build better habits"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <!-- Habits Illustration -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/todolist1" />

                </LinearLayout>

                <!-- Bottom Section - Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/secondary_soft_orange"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_habits_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3/5 Habits Done"
                        android:textColor="@color/background_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_habits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:progress="60"
                        app:indicatorColor="@color/accent_orange_light"
                        app:trackColor="@color/background_light_gray" />

                </LinearLayout>

            </LinearLayout>

            <!-- Hydration Card -->
            <LinearLayout
                android:id="@+id/card_hydration"
                android:layout_width="0dp"
                android:layout_height="235dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/widget_background"
                android:clickable="true"
                android:elevation="6dp"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Top Section - Quote and Illustration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/text_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Time to drink water quote - Editable -->
                    <EditText
                        android:id="@+id/et_hydration_quote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="Time to drink water"
                        android:inputType="text"
                        android:maxLines="2"
                        android:paddingHorizontal="8dp"
                        android:text="Time to drink water"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <!-- Hydration Illustration -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/h1" />

                </LinearLayout>

                <!-- Bottom Section - Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/gradient_diagonal_end"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_hydration_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5L / 3L"
                        android:textColor="@color/background_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_hydration"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="4dp"
                        android:progress="17"
                        app:indicatorColor="@color/info"
                        app:trackColor="@color/background_light_gray" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>