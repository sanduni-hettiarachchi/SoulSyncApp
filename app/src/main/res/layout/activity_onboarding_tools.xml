<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <!-- Background Decorative Elements -->

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Illustration -->

        <!-- Title -->

        <ImageView
            android:layout_width="388dp"
            android:layout_height="426dp"
            android:layout_marginBottom="40dp"
            android:background="@color/background_white"
            android:contentDescription="Wellness tools illustration"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/todolist1" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Build Good Habits"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="rack your routines and become your best self."
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <!-- Get Started Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Get Started"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_indigo"
            app:cornerRadius="28dp" />

    </LinearLayout>

</RelativeLayout>
